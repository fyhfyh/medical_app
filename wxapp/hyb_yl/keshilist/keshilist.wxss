.box {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.box-left {
    width: 50%;
    height: 100%;
    float: left;
    background: #eee;
}

.box-left view {
    width: 100%;
    padding: 20rpx 30rpx;
    padding-left: 60rpx;
    font-size: 28rpx;
    color: #000;
    position: relative;
}

.box-left view.onon {
    background: #fff;
}

.box-right {
    width: 50%;
    float: right;
    background: #fff;
}

.box-right view {
    width: 100%;
    height: 100%;
    padding: 20rpx 30rpx;
    padding-left: 60rpx;
    font-size: 28rpx;
    color: #000;
    position: relative;
}

.imglist {
    position: absolute;
    top: 25rpx;
    left: 20rpx;
    width: 30rpx;
    height: 30rpx;
}