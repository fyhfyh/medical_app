page {
    background: #F2F2F2;
}

view {
    box-sizing: border-box;
}

view,input,textarea,text {
    word-break: break-all;
}

.formgroup {
    width: 100%;
    padding: 20rpx;
    background: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
}

.formgroup view.left {
    width: 25%;
    font-size: 28rpx;
    color: #373737;
    display: inline-flex;
    align-items: center;
}

.formgroup view.left image {
    width: 35rpx;
    height: 35rpx;
    margin-right: 15rpx;
}

.formgroup view.right {
    width: 75%;
    text-align: right;
    font-size: 28rpx;
    color: #373737;
}

.formgroup view.right input {
    width: 100%;
    text-align: right;
}

.formgroup view.pickerbox {
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.formgroup view.pickerbox picker {
    margin-left: 30rpx;
}

.formgroup textarea {
    width: 100%;
    height: 200rpx;
}

button::after {
    border: none;
}

button {
    width: 96%;
    margin: 0 auto;
    background: #06AC85;
    color: #fff;
    font-size: 30rpx;
    margin-top: 30%;
}