page {
    background: #fff;
}

view {
    box-sizing: border-box;
}

image {
    width: 100%;
    height: 100%;
}

.box {
    width: 100%;
    padding: 50rpx;
    background: #fff;
}

.tishi {
    width: 100%;
    padding-bottom: 20rpx;
    font-size: 25rpx;
    color: #AFAFAF;
}

.input,.yanzheng {
    width: 100%;
}

input {
    display: inline-block;
    line-height: 75rpx;
    font-size: 24rpx;
    color: #242424;
    border-bottom: 1rpx solid #AFAFAF;
}

.input {
    margin-top: 20rpx;
    position: relative;
}

.input text {
    display: inline-block;
    font-size: 28rpx;
    color: #242424;
    margin-top: 16rpx;
}

.input text.sendMsg {
    background: #06AC85;
    color: #fff;
    width: 120rpx;
    height: 58rpx;
    line-height: 58rpx;
    text-align: center;
    border-radius: 10rpx;
    margin-left: 20rpx;
    position: absolute;
    top: -5rpx;
}

.input input {
    display: inline-block;
    width: 300rpx;
    margin-left: 20rpx;
    position: relative;
    top: 10rpx;
}

.yanzheng {
    margin-top: 50rpx;
}

.yanzheng input {
    display: inline-block;
    width: 300rpx;
    margin-left: 20rpx;
    position: relative;
    top: 10rpx;
}

.yanzheng text {
    display: inline-block;
    font-size: 28rpx;
    color: #242424;
    margin-top: 16rpx;
}

.submit {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    margin: 0 auto;
    margin-top: 110rpx;
    background: #06AC85;
    font-size: 28rpx;
    color: #fff;
}