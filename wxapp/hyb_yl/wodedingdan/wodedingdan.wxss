page {
    background: #F5F4F4;
    padding-bottom: 110rpx;
}

view {
    box-sizing: border-box;
}

image {
    width: 100%;
    height: 100%;
}

.taocan {
    width: 100%;
    background: #fff;
    border-bottom: 1px solid #F1F1F1;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
}

.taocan view {
    width: 20%;
    text-align: center;
    padding: 15rpx 0;
    display: inline-block;
}

.taocan view text:first-child {
    font-size: 26rpx;
    color: #afafaf;
}

.taocan view text:last-child {
    margin: 0 auto;
    display: block;
    width: 30rpx;
    border-bottom: 5rpx solid transparent;
    position: relative;
    top: 15rpx;
    z-index: 11111;
}

.taocan view.onon text:first-child {
    font-size: 31rpx;
    color: #000;
    font-weight: bold;
}

.taocan view.onon text:last-child {
    border-bottom: 5rpx solid #242424;
}

.serve {
    width: 100%;
    margin-top: 80rpx;
}

.serve-list {
    width: 100%;
    padding: 0 20rpx;
    background: #fff;
    margin-bottom: 20rpx;
}

.serve-list-top {
    width: 100%;
    padding: 20rpx 0;
    border-bottom: 1px solid #F1F1F1;
    overflow: hidden;
}

.left {
    float: left;
    width: 150rpx;
    height: 150rpx;
}

.left image {
    border-radius: 10rpx;
}

.right {
    float: right;
    width: 76%;
}

.right view {
    width: 100%;
    margin-bottom: 6rpx;
}

.right view:nth-child(1) {
    overflow: hidden;
}

.right view:nth-child(1) text:first-child {
    width: 80%;
    float: left;
    font-size: 28rpx;
    color: #242424;
}

.right view:nth-child(1) text:last-child {
    width: 20%;
    float: right;
    font-size: 22rpx;
    color: #ff542c;
    text-align: right;
}

.right view:nth-child(2) {
    width: 100%;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    letter-spacing: 3rpx;
    font-size: 22rpx;
    color: #afafaf;
}

.right view:nth-child(3) {
    font-size: 28rpx;
    color: #000;
    margin-bottom: 0;
}

.serve-list-bottom {
    width: 100%;
    text-align: right;
    padding: 20rpx 0;
    font-size: 26rpx;
    color: #000;
}

.serve-list-bottom text {
    border: 1rpx solid #000;
    padding: 5rpx 20rpx;
    border-radius: 6rpx;
}