radio-group {
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background-color: #fff;
    z-index: 9999;
}

.flex_box {
    display: flex;
    width: 100%;
    background: #fff;
}

.flex_item {
    flex: 1;
    text-align: center;
    border-bottom: 1px solid #eee;
    font-size: 28rpx;
}

.flex_item label {
    padding: 10px 0;
    display: inline-block;
    width: 100%;
}

.flex_box .active {
    background-color: #fff;
    color: #75bdcb;
    border-bottom: 1px solid #75bdcb;
}

.swiper-tab {
    width: 100%;
    border-bottom: 2rpx solid #777;
    text-align: center;
    line-height: 80rpx;
    z-index: 999;
    background: rgba(0,0,0,0.8);
    position: fixed;
    top: 0px;
    left: 0;
}

.swiper-tab-list {
    font-size: 30rpx;
    display: inline-block;
    width: 33.333%;
    color: #fff;
}

.on {
    color: #fff;
    border-bottom: 5rpx solid #fff;
    font-weight: bold;
}

.djstime {
    font-size: 28rpx;
    text-align: left;
}

.txt-view02 .btn02 {
    background-color: #242424;
    color: #fff;
    padding: 0.6% 2% 1%;
    border: 1px solid #242424;
    border-radius: 5px;
}

.btn01 {
    background-color: #fff;
    color: #242424;
    padding: 0.6% 2% 1%;
    border: 1px solid #242424;
    border-radius: 5px;
}

checkbox-group {
    width: 90%;
    box-sizing: border-box;
    padding: 2% 3%;
    border: 1px solid #75bdcb;
    margin: 0 auto 3%;
}

.timeall {
    width: 90%;
    margin: 3% auto;
    box-sizing: border-box;
    border: 1px solid #75bdcb;
    overflow: hidden;
    padding: 2% 0 1%;
}

.timeall view.lf {
    float: left;
    width: 25%;
    margin-bottom: 2%;
}

.timeall view.lf text {
    display: block;
    width: 80%;
    margin: 0 auto;
    text-align: center;
    font-size: 16px;
    background-color: #75bdcb;
    color: #fff;
    padding: 3% 0 4%;
    border-radius: 15px;
}

checkbox {
    width: 25%;
    text-align: center;
    margin-bottom: 6px;
    color: #949494;
    font-size: 16px;
}

checkbox .wx-checkbox-input {
    margin-right: 5px;
    appearance: none;
    outline: 0;
    border: 1px solid #d1d1d1;
    background-color: #fff;
    border-radius: 3px;
    width: 16px;
    height: 16px;
    position: relative;
}

button {
    width: 25%;
    font-size: 12px;
    color: #fff;
    background-color: #75bdcb;
    border-color: #75bdcb;
    border-radius: 0;
    float: right;
    margin-right: 8%;
}