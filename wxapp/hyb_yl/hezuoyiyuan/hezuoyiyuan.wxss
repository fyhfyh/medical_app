page {
    background: #fff;
}

view {
    box-sizing: border-box;
}

image {
    width: 100%;
    height: 100%;
}

.lf {
    float: left;
}

.rt {
    float: right;
}

.box {
    width: 100%;
    padding: 0 20rpx;
}

.list {
    width: 100%;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #efefef;
    overflow: hidden;
}

.list .lf {
    width: 160rpx;
    height: 160rpx;
    border-radius: 10rpx;
    border: 1rpx solid #efefef;
}

.list .lf image {
    border-radius: 10rpx;
}

.list .rt {
    width: 75%;
    padding: 10rpx 0;
    position: relative;
}

.list .rt view {
    width: 100%;
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    color: #242424;
    font-size: 26rpx;
    letter-spacing: 3rpx;
}

.list .rt view:first-child {
    font-size: 30rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
}

.list .rt view:nth-child(2) {
    width: 80%;
    height: 68rpx;
    color: #bfbfbf;
    border-right: 1rpx solid #dbdbdb;
    padding-right: 10rpx;
}

button[plain] {
    border: none;
}

button {
    width: 70rpx;
    height: 70rpx;
    position: absolute;
    top: 80rpx;
    right: 5rpx;
    padding: 0;
    margin: 0;
}

button image {
    width: 70%;
    height: 70%;
    position: absolute;
    top: 0;
    right: 15rpx;
}