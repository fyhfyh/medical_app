<view class="box">
    <view class="list" wx:for="{{hospatil}}">
        <view class="lf">
            <image src="{{item.ty_thumb}}"></image>
        </view>
        <view class="rt">
            <view>{{item.ty_name}}</view>
            <view>{{item.ty_address}}</view>
            <button bindtap="openMap" data-id="{{item.ty_id}}" hoverClass="none" plain="true" size="mini">
                <image src="../images/map.png"></image>
            </button>
        </view>
    </view>
</view>
