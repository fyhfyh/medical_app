page {
    background: #eee;
}

view {
    box-sizing: border-box;
}

image {
    width: 100%;
    height: 100%;
}

.xq-box {
    width: 100%;
    background: #fff;
    padding: 20rpx;
}

.xq-title {
    width: 100%;
    font-size: 30rpx;
    color: #242424;
    padding: 20rpx 0;
    letter-spacing: 3rpx;
}

.xq-time {
    width: 100%;
    font-size: 22rpx;
    color: #BCBCBC;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #f4f4f4;
}

.xq-time text:last-child {
    margin-left: 20rpx;
    color: #242424;
}

.audio {
    margin: 30rpx 0;
    display: none;
}

.xq-img {
    width: 100%;
    height: 400rpx;
}

.xq-jianjie {
    width: 100%;
    font-size: 30rpx;
    color: #242424;
    letter-spacing: 5rpx;
    line-height: 45rpx;
    margin: 20rpx 0;
}

.xq-aa {
    width: 100%;
    overflow: hidden;
}

.xq-aa view:first-child {
    float: left;
    width: 20%;
    font-size: 22rpx;
    color: #BCBCBC;
}

.xq-aa view:last-child {
    float: right;
    width: 16%;
    text-align: center;
}

.xq-aa view:last-child image {
    width: 20rpx;
    height: 20rpx;
}

.xq-aa view:last-child text {
    font-size: 25rpx;
    color: #242424;
    letter-spacing: 3rpx;
    margin-left: 10rpx;
}

.xq-num {
    margin-top: -25rpx;
}

.xq-num view {
    display: inline-block;
}

.xq-num view:first-child {
    font-size: 22rpx;
    color: #BCBCBC;
    margin-right: 30rpx;
}

.xq-num view:last-child image {
    width: 30rpx;
    height: 30rpx;
    position: relative;
    top: 5rpx;
    margin-right: 10rpx;
}

.xq-num view:last-child text {
    font-size: 22rpx;
    color: #242424;
}

.liuyan {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.5);
    z-index: 100;
}

.form {
    width: 100%;
    padding: 20rpx;
    background: #fff;
    overflow: hidden;
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 200;
}

.form input {
    float: left;
    width: 80%;
    font-size: 25rpx;
    color: #242424;
    margin-top: 7rpx;
}

.form button {
    float: right;
    width: 20%;
    background: #000;
    color: #fff;
    font-size: 25rpx;
}

.pnglun {
    width: 100%;
    padding: 20rpx;
}

.pinglun-list {
    width: 100%;
    overflow: hidden;
    margin: 20rpx 0;
}

.pinglun-left {
    float: left;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.pinglun-left image {
    border-radius: 50%;
}

.pinglun-right {
    width: 85%;
    float: right;
}

.pinglun1 {
    width: 100%;
    overflow: hidden;
}

.pinglun-name {
    float: left;
    font-size: 25rpx;
    color: #BCBCBC;
    width: 85%;
    margin-top: 8rpx;
}

.pinglun-zan {
    float: right;
    width: 90rpx;
    text-align: right;
}

.pinglun-zan image {
    width: 30rpx;
    height: 30rpx;
}

.pinglun-zan text {
    font-size: 26rpx;
    color: #BCBCBC;
    position: relative;
    top: -3rpx;
}

.pinglun-txt {
    font-size: 25rpx;
    color: #242424;
    letter-spacing: 3rpx;
    line-height: 40rpx;
}

.pinglun-time {
    font-size: 22rpx;
    color: #BCBCBC;
    margin-top: 20rpx;
}

.pinglun-more {
    width: 100%;
    margin: 30rpx 0;
    text-align: center;
}

.pinglun-more text {
    display: inline-block;
}

.pinglun-more text.plxian {
    width: 150rpx;
    border-bottom: 1rpx solid #BCBCBC;
    position: relative;
    top: -6rpx;
}

.pinglun-more text.pl {
    margin: 0 10rpx;
    font-size: 25rpx;
    color: #BCBCBC;
    letter-spacing: 3rpx;
}

.fanhui {
    width: 60rpx;
    height: 60rpx;
    position: fixed;
    bottom: 155rpx;
    right: 40rpx;
    background: #000;
    padding: 20rpx;
    border-radius: 50%;
    z-index: 50;
}

.fanhui navigator image {
    width: 40rpx;
    height: 40rpx;
    position: relative;
    top: -10rpx;
    left: -10rpx;
}

.jindu {
    width: 100%;
    margin: 20rpx auto;
    padding: 20rpx;
    overflow: hidden;
    border: 1rpx solid #eee;
}

.jindu-img {
    float: left;
    width: 70rpx;
    height: 70rpx;
    background: #000;
    border-radius: 50%;
    position: relative;
}

.jindu-img view {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 10rpx;
    left: 20rpx;
    z-index: 1000;
}

.jindu-time {
    float: left;
    width: 87%;
    margin-left: 10rpx;
    margin-top: 5rpx;
}

.jindu-time text,.jindu-time progress {
    display: inline-block;
}

.jindu-time text {
    width: 40rpx;
    font-size: 25rpx;
    color: #BCBCBC;
    position: relative;
    top: 2rpx;
}

.jindu-time progress {
    width: 420rpx;
    margin: 0 10rpx;
}