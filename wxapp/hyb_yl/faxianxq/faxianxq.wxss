page {
    background: #eee;
}

view {
    box-sizing: border-box;
}

image {
    width: 100%;
    height: 100%;
}

.lf {
    float: left;
}

.rt {
    float: right;
}

.box {
    width: 100%;
    padding: 0 20rpx 0 20rpx;
    background: #fff;
}

.box-wen {
    width: 100%;
    padding: 20rpx 0 10rpx;
    overflow: hidden;
}

.box-wen .lf {
    width: 80%;
}

.box-wen .lf image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.box-wen .lf text {
    display: inline-block;
    font-size: 28rpx;
    color: #444;
    margin-left: 10rpx;
    letter-spacing: 3rpx;
}

.box-wen .rt {
    width: 20%;
    text-align: right;
    font-size: 28rpx;
    color: #FA8D87;
    margin-top: 20rpx;
}

.wenti {
    width: 100%;
    padding-left: 90rpx;
    padding-bottom: 10rpx;
    font-size: 25rpx;
    color: #8E8E8E;
    letter-spacing: 3rpx;
    word-break: break-all;
}

.box-wen .lf .txt-xian {
    width: 6rpx;
    height: 6rpx;
    background: #242424;
    border-radius: 50%;
    top: -32rpx;
}

.box-time {
    width: 100%;
    margin-top: 20rpx;
    padding: 20rpx 0;
    background: #fff;
    border-top: 1rpx solid #eee;
    overflow: hidden;
}

.box-time-shijian {
    width: 50%;
    font-size: 25rpx;
    color: #B8B8B8;
}

.questions-zan {
    width: 20%;
    font-size: 25rpx;
    color: #242424;
    text-align: right;
    margin-top: 5rpx;
}

.questions-zan image {
    width: 30rpx;
    height: 30rpx;
}

.questions-zan text {
    position: relative;
    top: -3rpx;
    right: 0;
    color: #B8B8B8;
}

.doctor {
    width: 100%;
    padding: 30rpx 20rpx;
    background: #fff;
    overflow: hidden;
    margin-top: 20rpx;
}

.doctor-img {
    width: 130rpx;
    height: 130rpx;
}

.doctor-img image {
    border-radius: 50%;
}

.doctor-title {
    width: 60%;
    padding-left: 20rpx;
}

.doctor-title view {
    width: 100%;
    letter-spacing: 3rpx;
    font-size: 28rpx;
    color: #242424;
}

.doctor-title view:nth-child(1) text {
    display: inline-block;
}

.doctor-title view:nth-child(1) text:last-child {
    padding: 3rpx 10rpx;
    border: 1rpx solid #FA8D87;
    color: #FA8D87;
    font-size: 22rpx;
    border-radius: 10rpx;
    margin-left: 8rpx;
}

.doctor-title view:nth-child(2) {
    margin-top: 10rpx;
}

.doctor-title view:nth-child(3) {
    font-size: 25rpx;
    color: #8E8E8E;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top: 12rpx;
}

.doctor-jianjie {
    width: 150rpx;
    padding-left: 20rpx;
    margin-top: 8rpx;
}

.doctor-jianjie image,.doctor-jianjie text {
    display: block;
}

.doctor-jianjie image {
    width: 80rpx;
    height: 80rpx;
    margin: 0 auto;
}

.doctor-jianjie text {
    text-align: center;
    font-size: 22rpx;
    color: #FA8D87;
}

.doctor-jianjie text.onon {
    color: #8E8E8E;
}

.doctor-jgz view.aaa {
    width: 100%;
    text-align: center;
    font-size: 25rpx;
    color: #fa8d87;
}

.doctor-jgz view.onon {
    color: #8e8e8e;
}