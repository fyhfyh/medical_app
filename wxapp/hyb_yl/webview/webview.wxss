page {
    background: #fff;
}

view {
    box-sizing: border-box;
}

.box {
    width: 100%;
    padding: 50rpx;
    background: #fff;
}

.input {
    width: 100%;
    margin-top: 50rpx;
}

input {
    height: 75rpx;
    line-height: 75rpx;
    padding: 0 20rpx;
    font-size: 28rpx;
    color: #242424;
    border-bottom: 1rpx solid #AFAFAF;
}

.btn {
    width: 100%;
    padding: 50rpx 0;
    margin-top: 50rpx;
}

.btn button {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    background: #4ACAB3;
    font-size: 28rpx;
    color: #fff;
}

button::after {
    border: none;
}