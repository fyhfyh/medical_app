image {
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

.swiper_wrap {
    width: 100%;
    height: 280rpx;
}

.sub_nav {
    border-bottom: 2rpx solid #f1f1f1;
    height: 70rpx;
    line-height: 70rpx;
    background: #f0f0f0;
    margin: 20rpx 0;
    margin-bottom: 0rpx;
}

.sub_nav text {
    font-size: 28rpx;
    padding: 0 20rpx;
    color: #242424;
    display: inline-block;
    height: 100%;
    position: relative;
}

.sub_nav .onon {
    font-size: 30rpx;
    color: #289AF6;
}

.sub_nav .onon::after {
    content: "";
    display: block;
    height: 4rpx;
    width: 100%;
    background: #289AF6;
    position: absolute;
    bottom: 5rpx;
    left: 0%;
}

.footer {
    width: 100%;
    height: 98rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    padding: 10rpx;
    box-sizing: border-box;
    background: #fff;
    border-top: 1rpx solid #ebebeb;
    z-index: 5555;
}

.footer view {
    display: inline-block;
}

.footer view image {
    width: 40rpx;
    height: 40rpx;
    display: block;
    margin: 0 auto;
}

.footer view text {
    display: block;
    width: 100%;
    font-size: 28rpx;
    color: #AFAFAF;
    text-align: center;
    margin-top: 7rpx;
}

.footer view .sel_color {
    color: #02b3b9;
}

.copy {
    text-align: center;
    font-size: 28rpx;
    margin-top: 30rpx;
}

.copy .fuhao {
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    border: transparent;
}

.nomore {
    line-height: 80rpx;
    height: 80rpx;
    text-align: center;
    position: relative;
    font-size: 24rpx;
    width: 100%;
    background: #f0f0f0;
    color: #B3B3B3;
}

.nomore::before {
    content: "";
    display: block;
    width: 100rpx;
    height: 2rpx;
    background: #B3B3B3;
    position: absolute;
    left: 180rpx;
    top: 50%;
}

.nomore::after {
    content: "";
    display: block;
    width: 100rpx;
    height: 2rpx;
    background: #B3B3B3;
    position: absolute;
    right: 180rpx;
    top: 50%;
}

.current-city {
    width: 100%;
}

.city-letter-con {
    display: inline-block;
    width: 65rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
    text-align: center;
    color: #ff842a;
}

.city-color {
    width: 100%;
    height: 66rpx;
    line-height: 66rpx;
    font-size: 22rpx;
    background-color: #f7f7f7;
}

.city-text {
    margin: 8rpx 30rpx 8rpx 30rpx;
}

.city-con {
    font-size: 26rpx;
    border-top: 2rpx solid #d8d8d8;
    border-bottom: 2rpx solid #d8d8d8;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
}

.city-border {
    display: inline-block;
    width: 186rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    border: 2rpx solid #f7f7f7;
    border-radius: 10rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.city-border.hover {
    border-color: #ff842a;
    color: #ff842a;
}

.img_list {
    margin: 10px 0;
    text-align: center;
}

.img_wrap {
    display: inline-block;
    width: 185rpx;
    height: 185rpx;
}

.fade_in {
    animation: fadeIn 1s both;
}