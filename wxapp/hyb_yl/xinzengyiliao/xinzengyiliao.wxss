page {
    background: #fff;
}

view {
    box-sizing: border-box;
}

image {
    width: 100%;
    height: 100%;
}

.boxcontainer {
    width: 100%;
    padding: 20rpx;
}

.boxcontainer-list {
    width: 100%;
    height: 225rpx;
    border-radius: 10rpx;
    overflow: hidden;
    position: relative;
    margin-bottom: 20rpx;
}

.boxcontainer-bgt {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 10;
}

.boxcontainer-bgs {
    width: 100%;
    height: 100%;
    opacity: 0.6;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 5;
}

.boxcontainer-con {
    width: 100%;
    height: 100%;
    padding: 50rpx;
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 30;
}

.boxcontainer-conl {
    width: 135rpx;
    height: 135rpx;
}

.boxcontainer-conr {
    width: 75%;
}

.boxcontainer-conr view {
    width: 100%;
    text-align: right;
    color: #fff;
}

.boxcontainer-conr view:nth-child(1) {
    font-size: 36rpx;
    margin-bottom: 10rpx;
}

.boxcontainer-conr view:nth-child(2) {
    font-size: 26rpx;
    letter-spacing: 3rpx;
    line-height: 45rpx;
}

.boxcontainer-conr.left view {
    text-align: left;
}

.boxcontainer-step {
    color: #fff;
    background: rgba(255,255,255,0.5);
    font-size: 24rpx;
    padding: 5rpx 50rpx;
    position: absolute;
    top: 15rpx;
    left: -45rpx;
    z-index: 50;
    transform: rotate(-45deg);
}