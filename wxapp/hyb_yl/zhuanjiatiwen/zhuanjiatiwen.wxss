page {
    background: #eee;
}

.picture_list {
    padding: 20px;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: flex-start;
    align-content: flex-start;
}

.picture_item {
    margin: 10px;
    position: relative;
    width: 160rpx;
    height: 160rpx;
}

.upload_progress {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0.7;
    background-color: #000;
    color: #fff;
    width: 160rpx;
    height: 160rpx;
    text-align: center;
    line-height: 160rpx;
    font-size: 12px;
}

.picture_item image {
    width: 160rpx;
    height: 160rpx;
}

view {
    box-sizing: border-box;
}

image {
    width: 100%;
    height: 100%;
}

.box {
    width: 100%;
    padding: 20rpx;
    background: #fff;
}

.lf {
    float: left;
}

.rt {
    float: right;
}

.doctor {
    width: 100%;
    overflow: hidden;
}

.doctor-left {
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
}

.doctor-left image {
    border-radius: 50%;
}

.doctor-right {
    width: 78%;
    margin-left: 20rpx;
}

.doctor-right-top {
    width: 100%;
    border-bottom: 1rpx solid #f4f4f4;
    position: relative;
    padding-bottom: 10rpx;
    margin-top: 10rpx;
}

.doctor-name text:first-child {
    font-size: 30rpx;
    color: #444;
    letter-spacing: 3rpx;
    font-weight: bold;
}

.doctor-name text:last-child {
    display: inline-block;
    padding: 3rpx 10rpx;
    font-size: 25rpx;
    color: #fa8d87;
    border: 1rpx solid #fa8d87;
    border-radius: 10rpx;
    margin-left: 10rpx;
    letter-spacing: 3rpx;
}

.doctor-num {
    margin-top: 5rpx;
}

.doctor-num view {
    display: inline-block;
    font-size: 28rpx;
    color: #8e8e8e;
    letter-spacing: 3rpx;
}

.doctor-num view text {
    color: #fa8d87;
}

.doctor-num view.doctor-num-xian {
    width: 1rpx;
    height: 26rpx;
    border-left: 1rpx solid #8e8e8e;
    margin: 0 15rpx;
    position: relative;
    top: 5rpx;
}

.doctor-jgz {
    width: 100rpx;
    position: absolute;
    top: 0;
    right: 0;
}

.doctor-jgz view:first-child {
    width: 50rpx;
    height: 50rpx;
    margin: 0 auto;
}

.doctor-jgz view.aaa {
    width: 100%;
    text-align: center;
    font-size: 25rpx;
    color: #fa8d87;
}

.doctor-jgz view.onon {
    color: #8e8e8e;
}

.doctor-right-bottom view {
    margin-top: 10rpx;
    letter-spacing: 3rpx;
}

.doctor-right-bottom view:first-child {
    display: inline-block;
    font-size: 28rpx;
    padding-bottom: 3rpx;
    color: #fa8d87;
    border-bottom: 1rpx solid #fa8d87;
}

.doctor-right-bottom view:last-child {
    font-size: 28rpx;
    color: #8e8e8e;
}

.form {
    width: 100%;
    margin-top: 20rpx;
    padding-bottom: 30rpx;
}

.section {
    width: 100%;
    margin-bottom: 20rpx;
}

.section textarea {
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
    height: 300rpx;
    letter-spacing: 3rpx;
    line-height: 40rpx;
    color: #8e8e8e;
    font-size: 25rpx;
    position: relative;
    border: 1rpx solid #b8b8b8;
    border-radius: 10rpx;
}

.section textarea text {
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
    font-size: 25rpx;
    color: #b8b8b8;
}

.img-txt {
    width: 100%;
    font-size: 25rpx;
    color: #444;
}

.img {
    width: 100%;
    margin: 20rpx 0;
}

.img view.img-list {
    display: inline-block;
    width: 110rpx;
    height: 110rpx;
    margin-right: 10rpx;
    border-radius: 10rpx;
    position: relative;
}

.img view.img-list:nth-child(6) {
    margin-right: 0;
}

.img view.img-list image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.img view.img-list image.jian {
    position: absolute;
    width: 35rpx;
    height: 35rpx;
    top: -15rpx;
    right: -15rpx;
}

.img .tianjia {
    width: 110rpx;
    height: 110rpx;
    border-radius: 10rpx;
}

image.show {
    display: inline-block;
}

image.hide {
    display: none;
}

.tishi {
    font-size: 28rpx;
    color: #8e8e8e;
    letter-spacing: 3rpx;
}

.tishi image {
    width: 35rpx;
    height: 35rpx;
    position: relative;
    top: -1rpx;
}

button {
    border-radius: 50rpx;
    background: #06AC85;
    margin-top: 50rpx;
    font-size: 28rpx;
    color: #fff;
    letter-spacing: 3rpx;
    padding: 5rpx 0;
}

button::after {
    border: none;
}

.duihua {
    width: 100%;
    padding: 15rpx 20rpx;
    background: #fff;
    overflow: hidden;
    margin-top: 20rpx;
}

.duihua .lf {
    width: 75%;
    font-size: 30rpx;
    color: #444;
    letter-spacing: 3rpx;
    margin-top: 5rpx;
}

.duihua .rt {
    width: 25%;
    padding: 5rpx 10rpx;
    border: 1rpx solid #fa8d87;
    color: #fa8d87;
    font-size: 28rpx;
    text-align: center;
    border-radius: 10rpx;
    letter-spacing: 3rpx;
}