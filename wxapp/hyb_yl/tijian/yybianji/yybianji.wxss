@import "../yyxq/yyxq.wxss";

page {
    width: 100%;
    padding: 20rpx;
    background: #F5F5F5;
    box-sizing: border-box;
}

.tijianbg {
    width: 100%;
    height: 340rpx;
    border-radius: 10rpx;
    position: relative;
}

.tijianbg image {
    width: 100%;
    height: 100%;
}

.tijianbg-zhezhao {
    width: 100%;
    height: 340rpx;
    padding: 90rpx 50rpx;
    box-sizing: border-box;
    position: absolute;
    top: 0;
    left: 0;
}

.tijianbg-zhezhao view {
    width: 100%;
    font-size: 30rpx;
    color: #475353;
}

.tijianbg-zhezhao view:first-child {
    font-weight: bold;
    color: #000;
}

.tijianbg-zhezhao view:nth-child(2) {
    margin: 25rpx 0;
}

.yynews {
    width: 88%;
    margin: 0 auto;
    overflow: hidden;
    background-color: #fff;
    border-radius: 8px;
    padding: 7% 3%;
}

.yyxinxi {
    width: 65%;
    margin-left: 2%;
}

.yydingwei {
    width: 80px;
    margin-top: 0;
}

.yydingwei .yydwimg {
    width: 80px;
    height: 80px;
}

.form-all {
    width: 100%;
    border-radius: 8px;
    margin-top: 20rpx;
}

.form-all .section {
    width: 100%;
    border: 1px solid #A9A9A9;
    overflow: hidden;
    border-radius: 10rpx;
    padding: 20rpx;
    box-sizing: border-box;
    margin-bottom: 10rpx;
}

.form-all .section1 {
    padding: 12rpx 20rpx;
}

view.xin view {
    display: inline-block;
    margin-right: 44rpx;
}

view.xin view input {
    width: 20rpx;
    display: inline-block;
}

.section__title {
    width: 25%;
    margin-right: 3%;
    text-align: left;
    font-size: 28rpx;
}

.section input {
    width: 70%;
}

.section input {
    font-size: 28rpx;
}

.btn-area {
    margin-top: 30%;
}

button {
    background: #06AC85;
    font-size: 30rpx;
    color: #fff;
}

.form-all .section1 .section__title {
    margin-top: 6rpx;
}