@import "../tijian.wxss";

@import "../tjxq/tjxq.wxss";

page {
    padding-bottom: 75px;
}

.viewbtn {
    width: 100%;
    padding: 3% 0;
    position: fixed;
    bottom: 0;
    left: 0;
}

.yuyuebtn {
    width: 94%;
    padding: 3% 0%;
    text-align: center;
    color: #fff;
    border-radius: 8px;
    background-color: #44bcbc;
    font-size: 16px;
    margin: 0 auto;
}

.tctxt {
    font: normal 16px/24px "Micorsoft YaHei";
    text-align: justify;
    color: #242424;
}

.table {
    width: 100%;
    background-color: #fff;
    border-left: 1px solid #e9eeee;
    border-top: 1px solid #e9eeee;
    margin: 5% 0;
}

.thead {
    width: 100%;
}

.tr {
    overflow: hidden;
    border-bottom: 1px solid #e9eeee;
}

.table .thead .th {
    text-align: center;
    padding: 3% 0;
    background-color: #ecf8f8;
    border-right: 1px solid #e9eeee;
}

.thead .th:nth-child(1),.tbody .tr .td:nth-child(1) {
    width: 33%;
    padding: 3%;
}

.thead .th:nth-child(2),.tbody .tr .td:nth-child(2) {
    width: 54%;
    padding: 3%;
}

.table .tbody .td {
    text-align: left;
    padding: 3% 0;
    border-right: 1px solid #e9eeee;
    font: normal 16px/24px "Micorsoft YaHei";
}