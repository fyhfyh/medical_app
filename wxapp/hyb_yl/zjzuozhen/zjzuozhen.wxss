page {
    background: #fff;
}

view {
    box-sizing: border-box;
    font-size: 30rpx;
    color: #242424;
}

.box {
    width: 100%;
    padding: 30rpx 20rpx;
}

.box-list {
    width: 100%;
    padding: 20rpx;
    overflow: hidden;
    border: 1rpx solid #eee;
    border-radius: 10rpx;
    margin-bottom: 10rpx;
}

.box-date {
    float: left;
    width: 48%;
}

.box-arr {
    float: left;
    width: 20%;
    text-align: center;
}

.box-date view,.box-arr view {
    width: 100%;
}

.box-time {
    width: 30%;
    float: right;
    text-align: right;
}

.box-time view {
    display: inline-block;
}

.margin {
    margin: 0 10rpx;
    color: #D2D2D2;
}

.btns {
    width: 100%;
    padding: 20rpx;
    position: fixed;
    bottom: 0;
    left: 0;
}

.btns view {
    width: 100%;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    border-radius: 10rpx;
    letter-spacing: 3rpx;
}

.btns view image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.btns view:first-child {
    border: 1rpx solid #E9E9E9;
    margin-bottom: 10rpx;
    color: #E0E0E0;
}

.btns view:first-child text {
    position: relative;
    top: -3rpx;
}

.btns view:last-child {
    background: #06AC85;
    color: #fff;
}