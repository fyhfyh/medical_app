page {
    background: #fff;
}

view {
    width: 100%;
    box-sizing: border-box;
}

image {
    width: 100%;
    height: 100%;
}

.box {
    padding: 20rpx;
}

.box-images {
    height: 300rpx;
}

.box-images image {
    border-radius: 10rpx;
}

.box-title {
    padding: 20rpx 0;
    border-bottom: 1rpx solid #06AC85;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #06AC85;
    font-size: 30rpx;
    text-align: center;
}

.box-content {
    text-indent: 53rpx;
    padding: 20rpx 0;
}

.box-content view {
    color: #999;
    font-size: 28rpx;
}