.list {
    padding: 20rpx;
}

.item {
    border: 2rpx solid #f0f0f0;
    padding: 20rpx;
    margin-bottom: 20rpx;
    font-size: 30rpx;
    border-radius: 10rpx;
    position: relative;
}

.date {
    position: absolute;
    right: 20rpx;
}

.list_item {
    position: relative;
    border-right: 2rpx solid #f0f0f0;
}

.list_item .right {
    position: absolute;
    right: 20rpx;
}

.empty {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    background: #f6f6f6;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 5000;
    padding-top: 300rpx;
}

.empty view:first-child {
    width: 100%;
    height: 360rpx;
}

.empty view:first-child image {
    width: 100%;
    height: 100%;
}

.empty view:last-child {
    width: 100%;
    padding: 10rpx;
    text-align: center;
    font-size: 30rpx;
    color: #bec1c3;
}