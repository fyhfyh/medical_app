.title {
    background: #fff;
    justify-content: space-around;
    width: 100%;
    position: fixed;
    top: 0;
}

.title_item {
    width: 50%;
    padding: 20rpx 40rpx;
    text-align: center;
}

.title_item.sel {
    color: #EC6464;
}

.xiaoxi {
    background: #F2F2F2;
    color: #EC6464;
    padding: 25rpx 0;
    padding-left: 20rpx;
}

.mess_tip {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.list {
    padding: 0 20rpx;
}

.df {
    display: flex;
    flex-direction: row;
}

image {
    width: 100%;
    height: 100%;
}

.list .item {
    padding: 20rpx 0;
    height: 100rpx;
    border-bottom: 2rpx solid #DADADA;
    position: relative;
}

.list .item .del {
    display: inline-block;
    padding: 5rpx 20rpx;
    background: red;
    color: #fff;
    position: absolute;
    right: 20rpx;
    border-radius: 20rpx;
    top: 50%;
    transform: translateY(-50%);
}

.list .item .img {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
    position: relative;
}

.list .item .img image {
    border-radius: 10rpx;
}

.list .cont {
    width: 83%;
    padding: 5rpx 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.list .name {
    font-size: 30rpx;
}

.list .time {
    font-size: 24rpx;
    margin-top: auto;
}

.list .last_chat {
    font-size: 28rpx;
    width: 96%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list .item .tips {
    position: absolute;
    right: 0;
    top: 0;
    transform: translate(50%,-30%);
    width: 35rpx;
    height: 35rpx;
    line-height: 35rpx;
    text-align: center;
    border-radius: 50%;
    background: red;
    color: #fff;
    font-size: 22rpx;
}

.empty {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    background: #f6f6f6;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 5000;
    padding-top: 300rpx;
}

.empty view:first-child {
    width: 100%;
    height: 360rpx;
}

.empty view:first-child image {
    width: 100%;
    height: 100%;
}

.empty view:last-child {
    width: 100%;
    padding: 10rpx;
    text-align: center;
    font-size: 30rpx;
    color: #bec1c3;
}