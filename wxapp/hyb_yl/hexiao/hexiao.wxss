page {
    background: #eee;
    padding: 20rpx;
    width: 100%;
    box-sizing: border-box;
}

.box {
    width: 100%;
    box-sizing: border-box;
    background: #fff;
    padding: 50rpx;
    border-radius: 10rpx;
}

.cen {
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #D0D0D0;
    margin-top: 30rpx;
}

.qr_btn {
    width: 300rpx;
    height: 300rpx;
    border: 1px solid #06AC85;
    background: #06AC85;
    color: #fff;
    border-radius: 50%;
    margin: 0 auto;
    text-align: center;
    line-height: 300rpx;
}

.lists {
    margin-top: 20rpx;
}

.list {
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
    font-size: 30rpx;
    color: #000;
    background: #fff;
    border-radius: 10rpx;
    margin-top: 5rpx;
    overflow: hidden;
}

.list text {
    float: left;
    color: #000;
    font-weight: 500;
}

.list text:first-child {
    width: 30%;
    color: #D0D0D0;
    font-weight: normal;
}