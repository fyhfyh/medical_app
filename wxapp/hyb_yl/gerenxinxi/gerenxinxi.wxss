page {
    background: #F5F5F5;
}

view {
    width: 100%;
    box-sizing: border-box;
}

.title {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    background: #06AC85;
    text-align: center;
    font-size: 26rpx;
    position: fixed;
    top: 0;
    z-index: 99;
    color: #fff;
}

.font {
    font-size: 微软雅黑;
}

.box {
    width: 100%;
    padding: 20rpx;
}

.select {
    border-radius: 10rpx;
    padding: 20rpx;
    background: #fff;
    overflow: hidden;
    margin-bottom: 15rpx;
}

.select text {
    font-size: 28rpx;
    color: #BDBDBD;
    float: left;
    width: 150rpx;
    margin-top: 6rpx;
    letter-spacing: 3rpx;
}

.select input,.select radio-group {
    float: right;
    width: 77%;
    font-size: 28rpx;
    color: #000;
}

.select radio-group label {
    font-size: 28rpx;
    color: #000;
    position: relative;
    top: 5rpx;
}

.select radio-group label radio {
    transform: scale(0.5);
}

.textarea {
    border-radius: 10rpx;
    background: #fff;
    padding: 0 20rpx;
}

.textarea view {
    font-size: 28rpx;
    color: #BDBDBD;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #F6F6F6;
}

.textarea textarea {
    width: 100%;
    padding: 20rpx 0;
    height: 150rpx;
    font-size: 28rpx;
    color: #000;
}

button {
    background: #06AC85;
    color: #fff;
    font-size: 30rpx;
    position: relative;
    top: 150rpx;
}