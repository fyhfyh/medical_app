page {
    background: #fff;
}

.box {
    width: 100%;
    padding: 20rpx;
    padding-top: 0;
    box-sizing: border-box;
}

.box-list {
    display: inline-block;
    width: 48.5%;
    margin-top: 20rpx;
    position: relative;
}

.box-list:nth-child(even) {
    margin-left: 20rpx;
}

.box-img {
    width: 100%;
    height: 420rpx;
}

.box-img image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.box-zhezhao {
    width: 100%;
    height: 420rpx;
    background: rgba(0,0,0,0.3);
    position: absolute;
    top: 0;
    left: 0;
}

.box-index {
    width: 100%;
    padding: 5rpx 20rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.box-index text {
    float: left;
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    border: 1rpx solid #fff;
    font-size: 22rpx;
    color: #fff;
    text-align: center;
    line-height: 30rpx;
    margin-top: 10rpx;
}

.box-index image {
    float: right;
    width: 45rpx;
    height: 50rpx;
    border-radius: 50%ï¼›;
}

.box-time {
    width: 100%;
    padding: 5rpx 20rpx;
    text-align: center;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #fff;
    margin-top: 270rpx;
}

.empty {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    background: #f6f6f6;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 5000;
    padding-top: 300rpx;
}

.empty view:first-child {
    width: 100%;
    height: 360rpx;
}

.empty view:first-child image {
    width: 100%;
    height: 100%;
}

.empty view:last-child {
    width: 100%;
    padding: 10rpx;
    text-align: center;
    font-size: 30rpx;
    color: #bec1c3;
}