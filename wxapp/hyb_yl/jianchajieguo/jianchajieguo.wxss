page {
    background: #F9F5F2;
}

view {
    box-sizing: border-box;
}

.result {
    width: 100%;
    padding: 25rpx;
    background: #fff;
    font-size: 30rpx;
    color: #FE7987;
    position: relative;
}

.result::after {
    content: "";
    width: 8rpx;
    height: 35rpx;
    background: #FE7987;
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
}

.result-list {
    width: 100%;
    margin-top: 20rpx;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    background: #fff;
    font-size: 30rpx;
}

.result-box {
    width: 49.5%;
    border-bottom: 1rpx solid #F8F8F8;
    padding: 30rpx;
    color: #777;
}

view.bor {
    border-right: 1rpx solid #F8F8F8;
}

.result-box view {
    width: 100%;
    text-align: center;
}

view.minheight {
    padding: 10rpx 20rpx;
    color: #FE7987;
}

.result-box view:last-child {
    color: #777;
}

.modal {
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
}

.emptypage {
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,0.5);
}

.modal-form {
    width: 80%;
    position: absolute;
    top: 50%;
    left: 50%;
    background: #fff;
    transform: translate(-50%,-50%);
    border-radius: 20rpx;
}

.form-title {
    padding: 50rpx;
    font-size: 32rpx;
    text-align: center;
    color: #595959;
    padding-bottom: 0;
}

.form-group {
    width: 100%;
    padding: 50rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.form-group view {
    border: 1rpx solid #D4D4D4;
    font-size: 30rpx;
}

.form-group view:first-child {
    width: 45%;
    padding: 10rpx;
    color: #595959;
    border-right: 0;
    border-top-left-radius: 10rpx;
    border-bottom-left-radius: 10rpx;
}

.form-group>view:last-child {
    width: 55%;
    padding: 10rpx;
    color: #595959;
    border-top-right-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
}

.form-group view:last-child text {
    background: none;
    border: 15rpx solid red;
    width: 0;
    height: 0;
    border-color: #757575 transparent transparent transparent;
    margin-top: 15rpx;
}

.btns {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-top: 1rpx solid #DEDEDE;
}

.btns button {
    width: 50%;
    background: transparent;
    font-size: 30rpx;
    border-radius: 1rpx;
    color: #FE7987;
    padding: 15rpx;
}

button::after {
    border: none;
}

.btns button:first-child {
    border-right: 1rpx solid #DEDEDE;
}

.form-group view:last-child .danweikuang {
    position: absolute;
    top: 0;
    left: 0;
    background: #fff;
    z-index: 200;
    width: 85%;
    border-radius: 10rpx;
    padding: 5rpx 0;
}

.form-group view:last-child .danweikuang view {
    border: none;
    width: 100%;
    text-align: center;
    padding: 10rpx;
    border-bottom: 1rpx solid #D4D4D4;
}

.form-group view:last-child .danweikuang view:last-child {
    border: none;
}

view.block {
    display: block;
}

view.hide {
    display: none;
}

.result-box view.hong {
    color: #FE7987;
}

.submitbtns {
    width: 90%;
    text-align: center;
    padding: 20rpx 0;
    color: #fff;
    font-size: 30rpx;
    position: fixed;
    bottom: 10%;
    left: 50%;
    transform: translateX(-50%);
    z-index: 90;
    border-radius: 50rpx;
}