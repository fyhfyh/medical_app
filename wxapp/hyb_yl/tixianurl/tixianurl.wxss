.tab {
    width: 100%;
    overflow: hidden;
    border-bottom: 1rpx solid #dcdcdc;
}

.tab view {
    float: left;
    width: 49.5%;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    color: #949494;
}

.tab view:first-child {
    border-right: 1rpx solid #dcdcdc;
}

.zhuan {
    width: 96%;
    margin: 3% auto;
    box-sizing: border-box;
    border: 3px solid #ededed;
    border-radius: 5px;
    padding: 0 2%;
}

.tab view.onon {
    color: #000;
    font-weight: bold;
}

.zhuan01 {
    width: 96%;
    padding: 3% 2%;
    border-bottom: 1px solid #dcdcdc;
    overflow: hidden;
}

.lf {
    float: left;
}

.zhuan01 text:nth-child(1) {
    color: #242424;
    font-size: 14px;
    margin-right: 5%;
    font-weight: bold;
}

.zhuan01 text:nth-child(2) {
    color: #207acf;
    font-size: 14px;
}

.zhuan01 view {
    width: 96%;
    overflow: hidden;
    margin-top: 2%;
}

.zhuan01 view input {
    width: 70%;
    float: left;
}

.zhuanbtn {
    text-align: center;
    color: #fff;
    background-color: #272727;
    font-size: 16px;
    margin: 10% auto 5%;
    border-radius: 5px;
}

.txdetails {
    text-align: right;
    font-size: 14px;
    color: #949494;
    margin-bottom: 2%;
    padding: 0 1%;
}

.bm-btn .commodity_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.3;
    overflow: hidden;
    z-index: 1000;
    color: #fff;
}

.bm-btn .commodity_attr_box {
    width: 80%;
    position: fixed;
    bottom: 50%;
    left: 10%;
    z-index: 2000;
    background: #fff;
    height: 30%;
    border-radius: 8px;
    box-sizing: border-box;
    padding: 5% 3%;
    font-size: 16px;
}